{{if data.have_files}}
	<div align="center">
		<div class='item'>
			<div style="font-size: large; font-weight: bold;">Interface should have been here</div>
		</div>
		<div class="item">
			<div class="itemLabel">
				Options:
			</div>
			<div class="itemContent">
				<table>
					{{for data.files}}
						<tr><td>{{:value.name}} {{:helper.link('Do the thing', null, {'placeholder' : value.index})}}</td></tr>
					{{/for}}
				</table>
			</div>
		</div>
	</div>
{{else}}
	<div align="center" class='item' style="font-size: large; font-weight: bold;">No valid DNA sequences.</div>
{{/if}}
